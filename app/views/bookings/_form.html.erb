<%= semantic_form_for(@booking) do |f| %>
	<%= f.inputs do %>
  		<%= f.input :description %>
    	<%= f.input :start_date_time, :as => :datetime, :order => [:hour, :day, :month, :year] %>
    	<%= f.input :end_date_time, :as => :datetime, :order => [:hour, :day, :month, :year] %>
  	<% end %>
  	<%= f.buttons %>
<% end %>

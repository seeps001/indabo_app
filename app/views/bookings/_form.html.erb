<%= semantic_form_for(@booking) do |f| %>
	<%= f.inputs do %>
  		<%= f.input :description %>
    	<%= f.input :start_date, :hint => 'Format: Year Month Day', %>
    	<%= f.input :start_time, :hint => 'Format: HH:MM' %>
    	<%= f.input :end_date, :hint => 'Format: Year Month Day' %>
    	<%= f.input :end_time, :hint => 'Format: HH:MM'  %>
    	<%= f.input :venue_id, :as => :hidden %>
  	<% end %>
  	<%= f.buttons %>
<% end %>

<h1>All Bookings</h1>

<table class="table table-striped">
  <thead>
    <tr>
    <th>Booking reference</th>
    <th>Date time</th>
    <th>Venue</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.booking_reference %></td>
        <td><%= booking.description %></td>
        <td><%= booking.start_date_time %></td>
        <td><%= booking.end_date_time %></td>
        <td><%= booking.venue_id %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Booking', new_booking_path %>
